{
    "version": 2,
    "builds": [
      { "src": "package.json", "use": "@vercel/static-build" },
      { "src": "Backend/app.py", "use": "@vercel/python" }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/Backend/app.py" },
      { "source": "/(.*)", "destination": "/portafolio/browser/$1" },
      { "source": "/about", "destination": "/portafolio/browser/$1" },
      { "source": "/projects", "destination": "/portafolio/browser/$1" },
      { "source": "/contact", "destination": "/portafolio/browser/$1" }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }