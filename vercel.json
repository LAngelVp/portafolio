{
    "version": 2,
    "builds": [
      { "src": "package.json", "use": "@vercel/static-build" },
      { "src": "Backend/app.py", "use": "@vercel/python" }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/Backend/app.py" },
      { "source": "/(.*)", "destination": "/portafolio/browser/$1" },
      { "source": "/about", "destination": "/src/app/domains/components/about-me/about-me.component.html" },
      { "source": "/projects", "destination": "/src/app/domains/components/projects/projects.component.html" },
      { "source": "/contact", "destination": "/src/app/domains/components/contact-me/contact-me.component.html" }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }